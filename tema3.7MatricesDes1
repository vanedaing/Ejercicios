import numpy as np

# Definici√≥n de las matrices A y B
A = np.array([[1, 2], [3, 4]])
B = np.array([[5, 6], [7, 8]])

# Calcular 2A
two_A = 2 * A

# Calcular B transpuesta
B_transpose = B.T

# Calcular la suma (2A + B^T)
result = two_A + B_transpose

# Mostrar el resultado
print("El resultado de (2A + B^T) es:")
print(result)
